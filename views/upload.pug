extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="get")
            labal(for="Video File") Video File
            input(type="file", id="videoFile", name="videoFile", require=true)
            input(type="text", placeholder="Title", name="title", require=true)
            input(type="text", placeholder="Description", name="description", require=true)
            input(type="submit", value="Upload Video")